@model IEnumerable<_19_Atividade_CRUD.Models.Serie>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="fs-1">Bem-vindo(a)</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-lg-3">
            <div class="card">
                <img class="card-img-top " src="@Html.DisplayFor(modelItem => item.Imagem)" alt="Imagem de capa do card" style="height: 200px;">
                <div class="card-body text-center">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Sinopse)</p>
                    <a href="#" class="btn btn-secondary ">Saiba mais</a>
                </div>
            </div>
        </div>
    }
</div>