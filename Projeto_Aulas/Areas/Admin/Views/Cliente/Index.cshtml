@model IEnumerable<App.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}
@section scripts {
    <script src="~/js/BuscaCep.js"></script>
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.DataNascimento)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Cep)</th>
            <th>@Html.DisplayNameFor(model => model.Rua)</th>
            <th>@Html.DisplayNameFor(model => model.Bairro)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Numero)</th>
            <th>@Html.DisplayNameFor(model => model.Complemento)</th>
            <th>@Html.DisplayNameFor(model => model.Senha)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClienteID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClienteID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClienteID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
